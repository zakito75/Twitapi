<%= form_for(@tweet) do |f| %>
  <% if @tweet.errors.any? %>
    <div>
      <h2><%= pluralize(@tweet.errors.count "erreur") %></h2>
      <ul>
        <% @tweet.errors.full_messages.each do |message| %>
          <li<%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%=f.submit %>
  </div>
<% end %>
